generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  ensRecord      String         @id @unique
  createdAt      DateTime       @default(now())
  role           Role           @default(USER)
  fakeRegistries FakeRegistry[]
}

model FakeRegistry {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  jsonObject    String
  User          User?    @relation(fields: [userEnsRecord], references: [ensRecord])
  userEnsRecord String?
}

enum Role {
  USER
  ADMIN
}
